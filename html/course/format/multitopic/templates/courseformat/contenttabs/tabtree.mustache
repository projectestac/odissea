{{!
    @template core/tabtree

    Tab tree.

    Example context (json):
    {
        "tabs": [{
            "active": "true",
            "inactive": "false",
            "link": [{
                "link": "http://moodle.org"
            }],
            "title": "Moodle.org",
            "text": "Moodle community"
        }]
    }
}}
<div id="{{uniqid}}-course-tabs" class="course-section-tabs">
<ul class="nav nav-tabs mb-3">
  {{#tabs}}
    {{> format_multitopic/courseformat/contenttabs/tab }}
  {{/tabs}}
</ul>

{{#secondrow}}
  <ul class="nav nav-tabs mb-3">
    {{#tabs}}
      {{> format_multitopic/courseformat/contenttabs/tab }}
    {{/tabs}}
  </ul>
{{/secondrow}}
</div>
{{#js}}
require(['format_multitopic/courseformat/contenttabs/tabtree'], function(component) {
component.init('{{uniqid}}-course-tabs');
});
{{/js}}
