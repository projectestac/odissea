{{!
    @template core_courseformat/local/content/section

    Displays a course section.

    Note: This template is a wrapper around the section/content template to allow course formats and theme designers to
    modify parts of the wrapper without having to copy/paste the entire template.

    Example context (json):
    {
        "editing": 1,
        "num": 1,
        "id": 1,
        "hasphoto": 1,
        "tileicon": "icon-image",
        "isdraftfile": 0,
        "phototileediturl": "https://url.com"
    }
    }}
<span class="tiles-editor-image text-center" {{#editing}} data-section="{{num}}" data-true-sectionid="{{id}}" data-tiles-action="launch-tiles-icon-picker"{{/editing}} id="tileicon_{{num}}">
    {{^hasphoto}}
        <span class="tile-icon" role="button">
            {{#tileicon}}
                {{#pix}}tileicon/{{{tileicon}}}, format_tiles{{/pix}}
            {{/tileicon}}
        </span>
    {{/hasphoto}}
    {{#hasphoto}}
        <a class="tilebarphoto" data-imagetype="{{#isdraftfile}}draftfile{{/isdraftfile}}{{^isdraftfile}}tilephoto{{/isdraftfile}}"
           href="{{{phototileediturl}}}" style="background-image: url({{{phototileurl}}});"></a>
    {{/hasphoto}}
</span>