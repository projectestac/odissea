{{!
    @template format_tiles/progress_all_complete

    Progress indicator.

    Example context (json):
    {
        "hastilephoto": true,
        "showprogressphototiles": true,
        "progress": {"numOutOf": 10, "numComplete": 5},
        "usetooltips": false
    }
}}
{{#hastilephoto}}
    {{#showprogressphototiles}}
        {{#progress}}
            <div class="progress-complete-alt completioncheckbox complete tileallcomplete" id="tileallcomplete-{{tileid}}" data-numcomplete="{{numComplete}}"
                 data-numoutof="{{numOutOf}}" title="{{#str}}allcomplete, format_tiles{{/str}}"{{#usetooltips}} data-toggle="tooltip"{{/usetooltips}}>
                {{#pix}}completion-check, format_tiles, {{#str}}allcomplete, format_tiles{{/str}}{{/pix}}
            </div>
        {{/progress}}
    {{/showprogressphototiles}}
{{/hastilephoto}}
{{^hastilephoto}}
    {{#progress}}
        <div class="progress-complete-alt completioncheckbox complete tileallcomplete" id="tileallcomplete-{{tileid}}" data-numcomplete="{{numComplete}}"
             data-numoutof="{{numOutOf}}" title="{{#str}}allcomplete, format_tiles{{/str}}"{{#usetooltips}} data-toggle="tooltip"{{/usetooltips}}>
            {{#pix}}completion-check, format_tiles, {{#str}}allcomplete, format_tiles{{/str}}{{/pix}}
        </div>
    {{/progress}}
{{/hastilephoto}}