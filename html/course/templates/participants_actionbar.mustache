<div class="container-fluid tertiary-navigation" id="action_bar">
    <div class="row">
        {{#navigation}}
            <div class="navitem">
                {{> core/tertiary_navigation_selector}}
            </div>
        {{/navigation}}
        {{#renderedcontent}}
            <div class="navitem">
                {{{renderedcontent}}}
            </div>
        {{/renderedcontent}}
    </div>
</div>
