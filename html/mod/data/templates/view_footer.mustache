{{!
    @template mod_data/view_footer

    The mod_data sticky footer content.

    Example context (json):
    {
        "selectall": "<button>Select all</button>",
        "deleteselected": "<button>Cancel selection</button>",
        "pagination": "1, 2, 3...",
        "addentrybutton": {
            "disabled": false,
            "url": "#",
            "id": "test-id",
            "classes": "btn btn-link",
            "attributes": [
                {
                    "name": "title",
                    "value": "Add entry"
                }
            ],
            "text": "Add"
        }
    }
}}
{{#selectall}}
<div class="navitem">
    {{{selectall}}}
    {{{deleteselected}}}
</div>
{{/selectall}}
<div class="navitem submit mr-auto ml-auto">
    {{{pagination}}}
</div>
{{#addentrybutton}}
<div class="navitem">
    {{> core/action_link}}
</div>
{{/addentrybutton}}
