	left: -50px;
	top: -50px;
	overflow: visible;
	text-align : center;
}

div.CardStyleDC {
	position: absolute;
	font-family: [strFontFace];
	font-size: 100%;
	padding: 5px;
	border: 1px solid #ccc;
[inclExBGColor]	background-color: [strExBGColor];[/inclExBGColor]
	left: -50px;
	top: -50px;
	overflow: visible;
	text-align : center;
}
