{{!
    @template mod_questionnaire/mobile_date_question

    Template which defines a date question display in the mobile app.

    Context variables required for this template:
    * fieldkey - integer: ID of the question.
    * completed - boolean: True if question already completed.

    Example context (json):
    {
        "fieldkey": 985,
        "completed": 0
    }
}}
{{=<% %>=}}
<ion-item>
    <ion-label>
        <%#completed%>
        <core-format-text text="{{ CONTENT_OTHERDATA.<%fieldkey%> }}"></core-format-text>
        <%/completed%>
    </ion-label>
    <%^completed%>
    <ion-datetime-button datetime="questionnaire-date-<%fieldkey%>" />
    <ion-modal [keepContentsMounted]="true">
        <ng-template>
            <ion-datetime id="questionnaire-date-<%fieldkey%>" [(ngModel)]="CONTENT_OTHERDATA.<%fieldkey%>" presentation="date-time"
                max="2100-12-31" [showDefaultButtons]="true">
                <span slot="title">{{'core.date' | translate}}</span>
            </ion-datetime>
        </ng-template>
    </ion-modal>
    <%/completed%>
</ion-item>
