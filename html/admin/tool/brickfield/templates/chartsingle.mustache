{{!
    @template tool_brickfield/checktypes

    This template renders the charts for the different check groups

    Example context (json):
    {
        "title": "Totals"
    }
}}

<h3>{{{ title }}}</h3>
<div id="row1" class="row">
    {{#chart}}
    <div class="col-sm-9">
        {{{ chart }}}
    </div>
    {{/chart}}
    {{#chartdesc}}
    <div class="col-sm-3">
        <h4>{{{ chartdesctitle }}}</h4>
        {{{ chartdesc }}}
    </div>
    {{/chartdesc}}
</div>
