{{!
    @template tiny_aiplacement/textmodal

    Modal to manage AI generated text content within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * elementid: The id of the element that will be used to create the modal.
    * modaltitle: The title of the modal.

    Example context (json):
    {
        "elementid": "exampleId",
        "modaltitle": "Generate AI Image"
    }
}}
{{< core/modal }}

    {{$title}}
        {{#str}} textmodaltitle, tiny_aiplacement{{/str}}
    {{/title}}

    {{$body}}
        {{> tiny_aiplacement/loading }}
        {{> tiny_aiplacement/modalbodytext }}
    {{/body}}

    {{$footer}}
        {{> tiny_aiplacement/modalfootertext }}
    {{/footer}}

{{/ core/modal }}
