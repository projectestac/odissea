{{!
    @template tiny_media/embed_media_modal_link

    Embed media link modal template.

    Example context (json):
    {

    }
}}
<div class="tiny_media_source {{id}}">
    <div class="mb-1">
        <label for="source-url-input">
            {{#str}} entersource, tiny_media {{/str}}
        </label>
        <div class="input-group input-append w-100">
            <input id="source-url-input" class="form-control tiny_media_url_entry" type="url" size="32"/>
            {{#showfilepicker}}
            <span class="input-group-append">
                <button class="btn btn-secondary openmediabrowser" type="button">{{#str}} browserepositories, tiny_media {{/str}}</button>
            </span>
            {{/showfilepicker}}
        </div>
    </div>
</div>
<label for="{{elementid}}_link_nameentry">{{#str}} entername, tiny_media {{/str}}</label>
<input class="form-control fullwidth tiny_media_name_entry" type="text" id="{{elementid}}_link_nameentry" size="32" required="true"/>
