{{!
    @template qbank_managecategories/addcategory

    Add category button

    Context variables required for this template:
    * contextid - Context id for js init.
    * cmid - Course module id, if in a plugin.
    * courseid - The current course ID.

    Example context (json):
    {
        "contextid": "18",
        "cmid": "1234",
        "courseid": "1234"
    }
}}
<div id="qbank_managecategories-addcategory" class="pl-3">
    <button type="submit" data-action="addeditcategory" data-actiontype="add"
            data-contextid="{{contextid}}"
            data-cmid="{{cmid}}" data-courseid="{{courseid}}" class="btn btn-primary">
        {{# str}} addcategory, core_question {{/ str}}
    </button>
</div>

{{#js}}
    require(['qbank_managecategories/addcategory'], (addcategory) => {
        addcategory.init('#qbank_managecategories-addcategory');
    });
{{/js}}
